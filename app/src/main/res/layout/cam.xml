<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

    <com.kakao.adfit.ads.ba.BannerAdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:gravity="left"
        android:text=""
        android:textColor="#FFFF0000"/>
    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warningText"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text=""
        android:textColor="#FFFF0000"/>

    <SeekBar
        android:id="@+id/seekBar1"
        android:max="90"
        android:progress="0"
        android:progressDrawable="@drawable/seekbar_seekbar1"
        android:thumb="@drawable/seekbar_seekbar1_thumb"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startButton"
        android:layout_marginBottom="23dp"/>
    <TextView
        android:id="@+id/low"
        android:layout_alignBottom="@+id/seekBar1"
        android:layout_toLeftOf="@+id/seekBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/more"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/seekBar1"
        android:layout_toRightOf="@+id/seekBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/startButton"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="#7d010000"
        android:onClick="onStartButtonClick"
        android:text="Start"
        android:textColor="#ffffff"
        android:textSize="15dp"/>
</RelativeLayout>
